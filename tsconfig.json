{
  "compilerOptions": {
    "outDir": "./es",
    "allowJs": false,
    "strict": true,
    "target": "es2017",
    "module": "es2015",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./ts/*.ts",
    "./ts/*.tsx"
  ],
  "compileOnSave": true
}